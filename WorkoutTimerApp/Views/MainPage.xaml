<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="WorkoutTimerApp.Views.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Workout Timer">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Image Source="dotnet_bot.png" SemanticProperties.Description="Cute dot net bot waving hi to you!" HeightRequest="200" HorizontalOptions="Center" />

            <Label x:Name="WelcomeLabel"
                   FontSize="32"
                   FontAttributes="Bold"
                   Text="Welcome to Workout Timer!"
                   HorizontalOptions="Center" />

            <Label x:Name="CounterLabel"
                   FontSize="18"
                   FontAttributes="Bold"
                   Text="Connect to Google Sheets to get started"
                   HorizontalOptions="Center" />

            <Button x:Name="CounterBtn"
                    Text="Connect Google Account"
                    FontAttributes="Bold"
                    SemanticProperties.Hint="Connect to your Google account to access workout sheets"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>